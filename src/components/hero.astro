---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import json from 'assets/results.json';

const returnPerc = json.return / 100;
const initialValues = [
  10000000, 100000000
]

const nowValues = initialValues.map(item => item + (item * returnPerc))
function format(full){
  return `Rp ${(full / 1000000) | 0}Mio`
}

function getRandom(){
  return Math.floor(Math.random() * 2);
}

let rdm = getRandom()
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      If I trade {format(initialValues[rdm])} then
    </h1>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      I will get {format(nowValues[rdm])} now
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      If I Trade is an AI Based algorithm who perform trades on stocks listed on Indonesia's IDX.
      <wbr />The tool here is for research purpose only, and can be updated at any given time without any notice.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#start"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        How is it going
      </Link>
    </div>
  </div>
</main>
